# Fail silently on server errors, but show error message
fail
show-error
silent

# Follow redirects
location

# Retry settings
retry = 6
retry-all-errors
retry-delay = 1

connect-timeout = 10
max-time = 300

# Use IPv4
ipv4

# Compression
compressed

# Resume partial downloads when possible
continue-at -

# NOTE:
# - Do NOT set --output/-o here because output filename varies by call site.
# - All invocations must use: curl -K "<repo>/.curlrc" ... and redirect to files.
